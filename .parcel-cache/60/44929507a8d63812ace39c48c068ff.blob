*{
    margin: 0;
    box-sizing: border-box;
    font-family: 'Roboto', sans-serif;
}
.container{
    background: #FFF59B;
    height: 100vh;
}

.header{
    width: 100%;
    background-color: #000;
    height: 94px;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-around;
}
.header__logo{
width: 66px;
height: 44px;
background: #849FFF;
display: flex;
justify-content: center;
align-items: center;
}
.header__form{
    display: flex;
    flex-direction: row;
}
.header__form-input{
    width: 169px;
    height: 44px;
    border: 1px solid;
    margin-right: 15px;
}
.header__form-boton{
    width: 77px;
    height: 44px;
    background: #393939;
    color: #fff;
    border: none;
    text-align: center;
}
.mail{
    background: #FFF59B;
}
@media(min-width:666px){
    .mail{
        height: 100%;
       display: grid;
       grid-template-columns: 1fr 3fr;
    }
}
.mail__buttons{
    display: grid;
    grid-template-columns: 1fr 1fr;
}
@media(min-width:666px){
    .mail__buttons{
        height: 100%;
      display: flex;
      flex-direction: column;
    }
}
.mail__button-inbox{
    grid-column: 1/2;
    width: 100%;
    height: 61px;
    background: #393939;
    border: none;
    color: #fff;
}
@media(min-width:666px){
    .mail__button-inbox,.mail__button-sent{
        width: 242px;
        height: 73px;
    }
}
.mail__button-sent{
    grid-column: 2/3;
    width: 100%;
    height: 61px;
    background: #888888;
    border: none;
    color: #fff;
}
.mail__cont{
    background: #FFF59B;
    height: 100%;
    width: 100%;
}
.mail__cont-h3{
    margin-top: 25px;
    margin-left: 22px;
    display: inline-block;
    width: 334px;
    font-size: 60px;
    font-weight: 400;
}
.mail__cont-noti{
    margin: 14px auto;
    width: 334px;
    height: 73px;
    background: #FFFDE8;
    border: 1px solid;
    display: grid;
    grid-template-columns: 4fr 1fr;
    align-items: center;
}
.mail__cont-noti--p{
    font-size: 24px;
    margin-left: 18px;
}
