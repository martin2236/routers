*{
    margin: 0;
    box-sizing: border-box;
    font-family: 'Roboto', sans-serif;
}
.container{
    height: 100vh;
     background: #FFF59B;
}
.header{
    width: 100%;
    background-color: #000;
    height: 94px;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-ev;
}
.header__logo{
width: 66px;
height: 44px;
background: #849FFF;
display: flex;
justify-content: center;
align-items: center;
}
.header__form{
    display: flex;
    flex-direction: row;
}
.header__form-input{
    width: 169px;
    height: 44px;
    border: 1px solid;
    margin-right: 15px;
}
.header__form-boton{
    width: 77px;
    height: 44px;
    background: #393939;
    color: #fff;
    border: none;
    text-align: center;
}

.mail__buttons{
    display: grid;
    grid-template-columns: 1fr 1fr;
}
.mail__button-inbox{
    grid-column: 1/2;
    width: 100%;
    height: 61px;
    background: #393939;
    border: none;
    color: #fff;
}
.mail__button-sent{
    grid-column: 2/3;
    width: 100%;
    height: 61px;
    background: #888888;
    border: none;
    color: #fff;
}
.mail__h3{
    font-size: 60px;
    font-weight: 400;
    display: inline-block;
    width: 334px;
    text-align: left;
    margin:25px auto auto 18px;
}
.mail__noti{
    width: 334px;
    height: 73px;
    background: #FFFDE8;
    border: 1px solid;
    display: grid;
    grid-template-columns: 4fr 1fr;
    align-items: center;
    margin: 14px auto;
}
.mail__noti-p{
    grid-column: 1/2;
    font-size: 24px;
    margin-left: 18px;
    font-weight: 400;
}
.mail__noti-img{
    grid-column: 2/3;
}
