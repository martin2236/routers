*{
    margin: 0;
    box-sizing: border-box;
    font-family: 'Roboto', sans-serif;
}
.container{
    height: 100vh;
     background: #FFF59B;
}
.header{
    width: 100%;
    background-color: #000;
    height: 94px;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-evenly;
}
@media(min-width:666px){
    .header{
        height: 272px;
        background-color: #fff;
    }
}
.header__logo{
width: 66px;
height: 44px;
background: #849FFF;
display: flex;
justify-content: center;
align-items: center;
}
@media(min-width:666px){
    .header__form-logo{
        width: 156px;
        height: 78px;
    }
}
.header__form{
    display: flex;
    flex-direction: row;
}
.header__form-input{
    width: 169px;
    height: 44px;
    border: 1px solid;
    margin-right: 15px;
}
@media(min-width:666px){
    .header__form-input{
        width: 521px;
        height: 73px;
    }
}
.header__form-boton{
    width: 77px;
    height: 44px;
    background: #393939;
    color: #fff;
    border: none;
    text-align: center;
}
@media(min-width:666px){
    .header__form-boton{
        width: 242px;
        height: 73px;
    }
}
@media(min-width:666px){
    .mail{
        display: grid;
        grid-template-columns: 1fr 3fr;
        height: 478px;
        grid-template-rows: 1fr;
        background: #FFF59B;
    }
}
.mail__buttons{
    display: grid;
    grid-template-columns: 1fr 1fr;
}
@media(min-width:666px){
    .mail__buttons{
        grid-column: 1/2;
        display: flex;
        flex-direction: column;
        background: #C4C4C4;
        height: 100%;
    }
}
.mail__button-inbox{
    grid-column: 1/2;
    width: 100%;
    height: 61px;
    background: #393939;
    border: none;
    color: #fff;
}
@media(min-width:666px){
    .mail__button-inbox{
        width: 242px;
        height: 73px;
        margin: 30px auto 0 auto;
    }
}
.mail__button-sent{
    grid-column: 2/3;
    width: 100%;
    height: 61px;
    background: #888888;
    border: none;
    color: #fff;
}
@media(min-width:666px){
    .mail__button-sent{
        width: 242px;
        height: 73px;
        margin: 30px auto;
    }
}
.mail__h3{
    font-size: 60px;
    font-weight: 400;
    display: inline-block;
    width: 334px;
    text-align: left;
    margin:25px auto auto 18px;
}
@media(min-width:666px){
    .mail__h3{
        grid-row: 1/2;
        grid-column: 2/3;
    }
}
.mail__noti{
    width: 334px;
    height: 73px;
    background: #FFFDE8;
    border: 1px solid;
    display: grid;
    grid-template-columns: 4fr 1fr;
    align-items: center;
    margin: 14px auto;
}
@media(min-width:666px){
    .mail__noti{
        grid-column: 2/3;
        grid-row: 1/2;
        margin-top: 130px;
    }
}
.mail__noti-p{
    grid-column: 1/2;
    font-size: 24px;
    margin-left: 18px;
    font-weight: 400;
}
.mail__noti-img{
    grid-column: 2/3;
}
