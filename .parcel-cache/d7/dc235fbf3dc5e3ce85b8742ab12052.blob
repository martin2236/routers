*{
    margin: 0;
    box-sizing: border-box;
    font-family: 'Roboto', sans-serif;
}
.container{
    background: #FFF59B;
    height: 100vh;
}

.header{
    width: 100%;
    background-color: #000;
    height: 94px;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-around;
}
@media(min-width:666px){
    .header{
     height: 242px;
     background-color: #fff;
    }
}
.header__logo{
width: 66px;
height: 44px;
background: #849FFF;
display: flex;
justify-content: center;
align-items: center;
}
@media(min-width:666px){
    .header__logo{
     width: 156px;
     height: 78px;
    }
}
.header__form{
    display: flex;
    flex-direction: row;
}
.header__form-input{
    width: 169px;
    height: 44px;
    border: 1px solid;
    margin-right: 15px;
}
@media(min-width:666px){
    .header__form-input{
     width: 521px;
     height: 73px;
    }
}
.header__form-boton{
    width: 77px;
    height: 44px;
    background: #393939;
    color: #fff;
    border: none;
    text-align: center;
}
@media(min-width:666px){
    .header__form-boton{
     width: 242px;
     height: 73px;
    }
}
.mail{
    background: #FFF59B;
}
@media(min-width:666px){
    .mail{
        height: 100%;
       display: grid;
       grid-template-columns: 1fr 3fr;
    }
}
.mail__buttons{
    display: grid;
    grid-template-columns: 1fr 1fr;
}
@media(min-width:666px){
    .mail__buttons{
        height: 100%;
      display: flex;
      flex-direction: column;
      background: #C4C4C4;
      align-items: center;
    }
}
.mail__button-inbox{
    grid-column: 1/2;
    width: 100%;
    height: 61px;
    background: #393939;
    border: none;
    color: #fff;
}
@media(min-width:666px){
    .mail__button-inbox{
        width: 242px;
        height: 73px;
        margin-top: 30px;
    }
}
.mail__button-sent{
    grid-column: 2/3;
    width: 100%;
    height: 61px;
    background: #888888;
    border: none;
    color: #fff;
}
@media(min-width:666px){
    .mail__button-sent{
        width: 242px;
        height: 73px;
        margin-top: 30px;
    }
}
.mail__cont{
    background: #FFF59B;
    height: 100%;
    width: 100%;
}

